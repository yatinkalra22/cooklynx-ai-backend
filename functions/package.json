{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "swagger": "tsoa spec-and-routes",
    "swagger:spec": "tsoa spec",
    "swagger:routes": "tsoa routes",
    "prebuild": "npm run swagger",
    "build": "npm run swagger && tsc && cp src/generated/swagger.json lib/generated/",
    "build:watch": "concurrently \"tsc --watch\" \"tsoa spec-and-routes --watch\"",
    "shell": "npm run build && firebase functions:shell",
    "serve": "cp ../storage.rules.dev ../storage.rules && npm run build && firebase emulators:start --only functions,auth,database,storage,pubsub",
    "dev:emulator": "cp ../storage.rules.dev ../storage.rules && concurrently \"npm run build:watch\" \"firebase emulators:start --only functions,auth,database,storage,pubsub\"",
    "start": "npm run shell",
    "predeploy": "npm run build",
    "deploy": "firebase deploy --only functions",
    "deploy:db": "cp ../storage.rules.prod ../storage.rules && firebase deploy --only database,storage && cp ../storage.rules.dev ../storage.rules",
    "deploy:storage": "cp ../storage.rules.prod ../storage.rules && firebase deploy --only storage && cp ../storage.rules.dev ../storage.rules",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": ">=22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@google-cloud/pubsub": "^4.0.0",
    "@google/generative-ai": "^0.24.1",
    "@sentry/node": "^8.26.0",
    "@sentry/profiling-node": "^8.26.0",
    "axios": "^1.7.7",
    "busboy": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "google-auth-library": "^10.5.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "redis": "^4.7.0",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "uuid": "^13.0.0",
    "validator": "^13.15.26"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.4",
    "@types/cors": "^2.8.19",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/multer": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "@types/validator": "^13.15.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.4.1",
    "graphql": "^16.12.0",
    "prettier": "^3.3.3",
    "typescript": "5.1.6"
  },
  "private": true
}
